        <Dialog Id="FinishDlg" Width="370" Height="270" Title="!(loc.FinishDlg_Title)">
            <!-- ...existing dialog layout... -->

            <Control Id="OptionalInfo" Type="ScrollableText" X="20" Y="140" Width="330" Height="40" Sunken="yes" TabSkip="no">
                <Text SourceFile="installed.rtf" />
            </Control>
        </Dialog>
    </UI>
