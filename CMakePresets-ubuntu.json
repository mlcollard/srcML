{
  "version": 8,
  "include": [
    "CMakePresets-base.json"
  ],
  "configurePresets": [
    {
      "name": "ci-ubuntu",
      "displayName": "Ubuntu Release",
      "description": "Default build options for Ubuntu release",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "inherits": ["ci-gcc", "ci-sibling-build"],
      "cacheVariables": {
        "CPACK_OUTPUT_FILE_PREFIX": "/Builds",
        "BUILD_LIBSRCML_TESTS": "ON",
        "BUILD_PARSER_TESTS": "ON"
      }
    }
  ],
  "buildPresets" : [
    {
      "name": "ci-ubuntu",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      // "hidden": true,
      "configurePreset": "ci-ubuntu",
      "configuration": "Release"
    },
    {
      "name": "ci-clean-ubuntu",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "configurePreset": "ci-ubuntu",
      // "hidden": true,
      "targets": "clean"
    },
    {
      "name": "ci-install-package-ubuntu",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "configurePreset": "ci-ubuntu",
      "targets": "install_package"
    },
    {
      "name": "ci-test-client-ubuntu",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "configurePreset": "ci-ubuntu",
      "targets": ["test_client"]
    },
    {
      "name": "ci-test-libsrcml-ubuntu",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "configurePreset": "ci-ubuntu",
      "targets": ["test_libsrcml"]
    },
    {
      "name": "ci-test-parser-ubuntu",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "targets": ["test_parser"],
      "configurePreset": "ci-ubuntu"
    }
  ],
  "packagePresets": [
    {
      "name": "ci-ubuntu",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "configurePreset": "ci-ubuntu",
      "generators": [ "DEB", "TGZ", "TBZ2" ],
      "inherits": ["ci-base"]
    }
  ],
  "testPresets": [
  ],
  "workflowPresets": [
    {
      "name": "ci-ubuntu",
      "steps": [
        { "type": "configure", "name": "ci-ubuntu" },
        { "type": "build",     "name": "ci-ubuntu" },
        { "type": "package",   "name": "ci-ubuntu" },
        { "type": "build",     "name": "ci-install-package-ubuntu" },
        { "type": "build",     "name": "ci-test-client-ubuntu" },
        { "type": "build",     "name": "ci-test-libsrcml-ubuntu" },
        { "type": "build",     "name": "ci-test-parser-ubuntu" }
      ]
    }
  ]
}
